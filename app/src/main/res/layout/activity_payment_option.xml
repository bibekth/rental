<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Select Payment Method Title -->
    <TextView
        android:id="@+id/selectPaymentMethodText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Payment Method"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Khalti RadioButton -->
    <RadioButton
        android:id="@+id/khaltiRadioButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="986******55"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/selectPaymentMethodText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Cash on Delivery RadioButton -->
    <RadioButton
        android:id="@+id/cashOnDeliveryRadioButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="To your address"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/khaltiRadioButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Information about cash payment fee -->
    <TextView
        android:id="@+id/cashPaymentInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cash payment fee of RS.10 applies only to cash on delivery payment. There is no extra fee when using other payment methods."
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:background="@android:color/background_light"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cashOnDeliveryRadioButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Sub Total -->


    <!-- Grand Total -->
    <TextView
        android:id="@+id/grandTotalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grand Total:"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cashPaymentInfo"
        app:layout_constraintStart_toStartOf="@id/cashPaymentInfo"
        android:layout_marginStart="16dp"/>

    <!-- Grand Total Amount -->
    <TextView
        android:id="@+id/grandTotalAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs. 208000"
        android:textSize="16sp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cashPaymentInfo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"/>

    <!-- Pay Now Button -->
    <Button
        android:id="@+id/payNowButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pay Now"
        android:backgroundTint="@android:color/black"
        android:textColor="@android:color/white"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/grandTotalText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
