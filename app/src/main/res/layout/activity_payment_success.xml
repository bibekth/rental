<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PaymentSuccessActivity">

    <!-- Close Button -->
    <ImageView
        android:id="@+id/close_button"
        android:layout_width="14dp"
        android:layout_height="wrap_content"
        android:src="@drawable/cross"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="Close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Success Icon -->
    <ImageView
        android:id="@+id/success_icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/ic_check_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/close_button" />

    <!-- Congratulations Text -->
    <TextView
        android:id="@+id/congratulations_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congratulations"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/success_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Payment Success Text -->
    <TextView
        android:id="@+id/payment_success_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Order will be at your door soon!!"
        android:textSize="14sp"

        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/congratulations_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Done Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/done_button"
        android:layout_width="380dp"
        android:layout_height="55dp"
        android:text="See more Products"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/primary"
        android:textSize="14sp"
        android:textColor="@color/white"
        app:cornerRadius="5dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/payment_success_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.7"/>
</androidx.constraintlayout.widget.ConstraintLayout>
