<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- ImageView for the phone image -->
    <ImageView
        android:id="@+id/phoneImageView"
        android:layout_width="414dp"
        android:layout_height="508dp"
        android:layout_marginTop="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/splash2"
        app:layout_constraintBottom_toTopOf="@+id/textContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Container for the text views and button -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/textContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/phoneImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- TextView for "Try our app" -->
        <TextView
            android:id="@+id/tryOurAppTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Try our app"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/subtitleTextView" />

        <!-- TextView for "Buy smart, save more" -->
        <TextView
            android:id="@+id/subtitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy smart, save more."
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tryOurAppTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/getStartedButton" />

        <!-- Button for "Get Started" -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/getStartedButton"
            android:layout_width="145dp"
            android:layout_height="55dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#000000"
            android:text="Get Started"
            android:textColor="#ffffff"
            android:textSize="16dp"
            app:cornerRadius="5dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subtitleTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
