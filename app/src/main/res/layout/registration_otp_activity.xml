<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".RegistrationOTPActivity">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="53dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/app_logo" />

    <!-- Cancel Button -->

    <TextView
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Cancel"
        android:textColor="@color/accent"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/logoImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.916"
        app:layout_constraintStart_toEndOf="@id/logoImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.757" />

    <TextView
        android:id="@+id/verifyOtpTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Verify OTP"
        android:textColor="@color/text"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoImageView" />

    <TextView
        android:id="@+id/otpInstructionsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/text"
        android:text="Enter the 6 digit OTP code sent via E-mail:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/verifyOtpTextView" />

    <TextView
        android:id="@+id/phoneNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textColor="@color/text"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/otpInstructionsTextView" />

    <!-- OTP EditTexts -->
    <EditText
        android:id="@+id/otpEditText1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:inputType="number"
        android:textColor="@color/text"
        android:maxLength="1"
        app:layout_constraintEnd_toStartOf="@id/otpEditText2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phoneNumberTextView" />

    <EditText
        android:id="@+id/otpEditText2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textColor="@color/text"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        app:layout_constraintEnd_toStartOf="@id/otpEditText3"
        app:layout_constraintStart_toEndOf="@id/otpEditText1"
        app:layout_constraintTop_toTopOf="@id/otpEditText1" />

    <EditText
        android:id="@+id/otpEditText3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:inputType="number"
        android:textColor="@color/text"
        android:maxLength="1"
        app:layout_constraintEnd_toStartOf="@id/otpEditText4"
        app:layout_constraintStart_toEndOf="@id/otpEditText2"
        app:layout_constraintTop_toTopOf="@id/otpEditText1" />

    <EditText
        android:id="@+id/otpEditText4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="@color/text"
        android:inputType="number"
        android:maxLength="1"
        app:layout_constraintEnd_toStartOf="@id/otpEditText5"
        app:layout_constraintStart_toEndOf="@id/otpEditText3"
        app:layout_constraintTop_toTopOf="@id/otpEditText1" />

    <EditText
        android:id="@+id/otpEditText5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="@color/text"
        android:inputType="number"
        android:maxLength="1"
        app:layout_constraintEnd_toStartOf="@id/otpEditText6"
        app:layout_constraintStart_toEndOf="@id/otpEditText4"
        app:layout_constraintTop_toTopOf="@id/otpEditText1" />

    <EditText
        android:id="@+id/otpEditText6"
        android:layout_width="40dp"
        android:textColor="@color/text"
        android:layout_height="40dp"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/otpEditText5"
        app:layout_constraintTop_toTopOf="@id/otpEditText1" />

    <!-- Resend OTP Text -->
    <TextView
        android:id="@+id/resendOtpTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:textColor="@color/darker"
        android:text="Resend OTP in  00:59"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/otpEditText1" />

    <!-- Resend OTP Button -->
    <Button
        android:id="@+id/resendOtpButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/primary"
        android:text="Resend OTP"
        android:textColor="@color/white"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resendOtpTextView"
        app:layout_constraintWidth_percent="0.8" />

    <!-- Verify OTP Button -->
    <Button
        android:id="@+id/verifyOtpButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Verify OTP"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resendOtpButton"
        app:layout_constraintWidth_percent="0.8" />
</androidx.constraintlayout.widget.ConstraintLayout>
